{
    "name": "unzeroun/isocontent",
    "description": "A library to transform web contents (say HTML) to an abstract AST that can be rendered everywhere",
    "type": "library",
    "require": {
        "php": ">=7.4"
    },
    "suggest": {
        "ext-dom": "ext-dom is required for DOMParser usage",
        "ext-json": "ext-json is required for JSONRenderer usage",
        "symfony/framework-bundle": "for Symfony integration",
        "symfony/serializer": "for serialization of AST"
    },
    "require-dev": {
        "ext-dom": "*",
        "ext-json": "*",
        "phpunit/phpunit": "^9.3.11",
        "spatie/phpunit-watcher": "^1.22",
        "symfony/var-dumper": "^4.4 | ^5.0",
        "phpstan/phpstan": "^0.12.44",
        "symfony/framework-bundle": "^4.4 | ^5.0",
        "symfony/serializer": "^4.4 | ^5.0",
        "satooshi/php-coveralls": "^2.1",
        "phpspec/prophecy-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Isocontent\\": "src/"
        }
    },
    "autoload-dev":  {
        "psr-4": {
            "Isocontent\\Tests\\": "tests/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Yohan Giarelli",
            "email": "yohan@un-zero-un.fr"
        }
    ]
}
